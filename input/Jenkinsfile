pipeline {
    agent any
    stages {
        stage('Example') {
            environment {
                choice = 'one'
                test = 'two'
            }
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
                parameters {
                    //string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                    choice(name: 'CHOICES', choices: ['one', 'two'], description: '')
                }
            }
            steps {
                script{
                    if(env.choice == 'one'){
                        echo "Hello nice to meet you."
                    }else {
                        echo "hey here!"
                    }
                }
            }
        }
        stage('test'){
            environment{
                sample = 'testing'
            }
            steps{
                script{
                    echo "${sample}"
                    if(params.CHOICES == 'one'){
                        echo "hi"
                    }
                }
            }
        }
    }
}
