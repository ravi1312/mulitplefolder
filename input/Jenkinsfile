pipeline {
    agent any
    options {
        ansiColor('xterm')
    }
    stages {
        stage('Build') {
         //    environment { 
           //         AOEU= sh (returnStdout: true, script: 'echo \033[1;30mHello \033[0mcolorful world!').trim()
             //   }
            steps {
                echo '\033[1;30mHello \033[0mcolorful world!'
                //hello=$(echo 'hello')
                //echo "${hello}"
            }
        }
        stage('build') {
            steps{
                script{
                    def someGroovyVar = 'Hello world'
                    withEnv(['VAR1=VALUE ONE',
                             "VAR2=${someGroovyVar}"
                            ]) {
                        def result = sh(script: 'echo \033[1;30m$VAR1; echo $VAR2', returnStdout: true)
                        echo result
                    }
                }
            }
        }
        stage('Example') {
           // input {
             //   message "Should we continue?"
               // ok "Yes, we should."
                //submitter "alice,bob"
                //parameters {
                    //string(name: 'PERSON', defaultValue: 'Mr Jenkins', description: 'Who should I say hello to?')
                  //  choice(name: 'CHOICES', choices: ['one', 'two'], description: '')
                //}
            //}
            steps {
                script{
                   // sh """
                 //   #!/bin/bash
                   // BLUE='\e[34m'
                    //echo -e "${BLUE}INFO: Information goes here.${BLUE}"
                    //"""
                   // echo "${table}"
                    def USER_INPUT = input(
                    message: 'User input required - Some Yes or No question?',
                    parameters: [
                            [$class: 'ChoiceParameterDefinition',
                             choices: ['no','yes'].join('\n'),
                             name: 'input',
                             description: "Menu - select box option"]
                        
                    ])
                    echo "The answer is: ${USER_INPUT}"
                    if( "${USER_INPUT}" == "yes"){
                        //do something
                        echo "hello boss"
                    } else {
                        //do something else
                        echo "good morning"
                    }
                }
            }
        }
    }
    post{
        always{
            cleanWs()
        }
    }
}
